<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


    <navigation-rule>
        <display-name>login.xhtml</display-name>
        <from-view-id>/pages/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.createUser}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/pages/welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>user.xhtml</display-name>
        <from-view-id>/pages/user.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.logout}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/pages/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>user.xhtml</display-name>
        <from-view-id>/pages/user.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.logout}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/pages/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{shoppingCartBean.viewCart}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/pages/shoppingcart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Detailseite zu Produkt anzeigen -->
    <navigation-rule>
        <display-name>products.xhtml</display-name>
        <from-view-id>/pages/products.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{articleBean.getDetail}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/pages/detail.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <validator>
        <validator-id>loginValidator</validator-id>
        <validator-class>presentation.LoginValidator</validator-class>
    </validator>
</faces-config>